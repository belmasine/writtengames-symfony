{% extends '::base.html.twig' %}

{% block body %}

    <div class="container profile">

        {# PAGE HEADER #}
        <div class="page-header">
            <h1>Your account settings</h1>
        </div>

        {# ACCOUNT SETTINGS INFORMATION #}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="icon icon-info-sign"></i>
            Are you looking to change your data, connect a social login to your
            account, or enable traditional login with a password? You can do all
            that here in your account settings.
        </div>

        {# USERNAME FORM #}
        <form method="POST"
              action="{{ path( 'wg_profile_save_username', { 'canonical_username': user.usernameCanonical } ) }}">

            {# FORM HEADER #}
            <div class="row">
                <div class="span12">
                    <h3>Your user name <small>as it appears on this website</small></h3>
                </div>
            </div>

            {# FORM ELEMENTS #}
            {% set checkPath = path( 'wg_profile_username_available', { 'canonical_username': user.usernameCanonical } ) %}
            <div class="row">
                <div class="span12" style="position: relative;">
                    <div class="input-append">
                        <input name="username" value="{{ user.username }}"
                               type="text" class="input-xlarge" id="input_username"
                               data-availability-check-url="{{ checkPath }}" />
                        <input type="submit" class="btn" value="save" />
                    </div>
                </div>
            </div>

        </form>

        {# EMAIL FORM #}
        {% set foo = user.email ? 'Change your' : 'Add an' %}
        <form method="POST"
              action="{{ path( 'wg_profile_save_email', { 'canonical_username': user.usernameCanonical } ) }}">

            {# FORM HEADER #}
            <div class="row">
                <div class="span12">
                    <h3>{{ foo }} email address</h3>
                </div>
            </div>

            {# FORM ELEMENTS #}
            <div class="row">
                <div class="span12" style="position: relative;">
                    <div class="input-append">
                        <input name="email" value="{{ user.email }}"
                               type="text" class="input-xlarge" />
                        <input type="submit" class="btn" value="save" />
                    </div>
                </div>
            </div>

        </form>

        {% set foo = user.password ? 'Change your' : 'Add a' %}
        <h3>Add a password{% if user.password == '' %} <small>to enable traditional login</small>{% endif %}</h3>

        <div style="height: 60px;"></div>

        {% set foo = user.identities|length > 0 ? 'another' : 'a' %}
        <h3>Connect {{ foo }} social login</h3>

        <div style="height: 80px;"></div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var usernameAvailabilityQueried;
        $( function()
        {
            $( '.form-control-hint' ).show();
            $( '#input_username' ).keyup( function()
            {
                if ( usernameAvailabilityQueried && usernameAvailabilityQueried.readyState != 4 )
                {
                    usernameAvailabilityQueried.abort();
                }
                var url = $( this ).attr( 'data-availability-check-url' );
                var username = $( this ).val();
                var target = $( this ).parent();
                addFormControlHint( {cssClass: 'loading', text: 'checking...'}, target );
                usernameAvailabilityQueried = $.ajax(
                {
                    url: url,
                    data: { username: username },
                    dataType: 'json',
                    success: function( response )
                    {
                        addFormControlHint( response, target )
                    }
                });
            });
            $( '#input_username' ).blur( function()
            {
            $( '.form-control-hint' ).fadeOut( 3000 );
            });
        });
        function addFormControlHint( response, target )
        {
            target.parent().find( '.form-control-hint' ).remove();
            var hint = $( '<span/>' );
            hint.insertAfter( target );
            hint.addClass( 'form-control-hint' );
            hint.addClass( response.cssClass );
            var icon = $( '<i/>' );
            hint.append( icon );
            icon.addClass( 'icon' );
            var text = $( '<span/>' );
            hint.append( text );
            text.html( response.text );
            switch ( response.cssClass )
            {
                case 'loading':
                    icon.addClass( 'icon-spinner icon-spin' );
                    break;
                case 'success':
                    icon.addClass( 'icon-ok-sign' );
                    break;
                case 'error':
                    icon.addClass( 'icon-exclamation-sign' );
                    break;
            }
        }
    </script>
{% endblock %}