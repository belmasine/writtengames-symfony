{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% block hwi_oauth_content %}
    <h3>Connect your {{ service|capitalize }} identity?</h3>
    <div class="row">
        <div class="span6">
            <p>This will let you use your {{ service|capitalize }} identity "{{ userInformation.realName }}" to log on to this website.</p>
            <p>
                <form action="{{ path('hwi_oauth_connect_service', {'service': service, 'key': key}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                    {{ form_widget(form) }}
                    <div>
                        <button type="submit" class="btn btn-primary">Connect</button>
                        <a href="{{ path( 'uf_profile_edit', { 'username_slug': app.user.usernameSlug }) }}" class="btn">Cancel</a>
                    </div>
                </form>
            </p>
        </div>
        <div class="span6">
            {% if userInformation.profilePicture is not empty %}
                <img src="{{ userInformation.profilePicture }}" />
            {% endif %}
        </div>
    </div>
{% endblock hwi_oauth_content %}
