
{% set identities = app.user.identities %}

<div class="page-header">
    <h1>Your account settings</h1>
</div>

<div class="well">
    Change your user name, connect another social login to your account, or
    enable traditional login with password.
</div>

<div class="row">
    <div class="span6">
        <div class="pull-left">
            <h3>Your user name</h3>
            <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-inline">
                {{ form_widget(form.username) }}
                <input type="hidden" name="fos_user_profile_form[email]" value="{{ form.email.get( 'value' ) }}" />
                <input type="submit" class="btn" value="save" />
            </form>
        </div>
    </div>
    <div class="span6">
        <div class="pull-right">
            {% set foo = identities|length > 0 ? 'another' : 'a' %}
            <h3>Connect {{ foo }} social login</h3>
        </div>
    </div>
</div>

{% set foo = app.user.email ? 'Change your' : 'Add an' %}
<h3>{{ foo }} email address</h3>

{% set foo = app.user.password ? 'Change your' : 'Add a' %}
<h3>Add a password</h3>

